<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Form Kapal</title>
  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include("../partials/nav.ejs") %>

<div class="container mt-5">
  <h2>Form Kapal</h2>
  <form action="/kapal/store" method="POST">
    <div class="form-group">
      <label for="nama_kapal">Nama Kapal</label>
      <input type="text" class="form-control" id="nama_kapal" name="nama_kapal" required>
    </div>
    <div class="form-group">
      <label for="id_pemilik">Pemilik</label>
      <select class="form-control" id="id_pemilik" name="id_pemilik" required>
        <option value="">Pilih Pemilik</option>
        <% for (let i = 0; i < dataPemilik.length; i++) { %>
        <option value="<%= dataPemilik[i].id_pemilik %>"><%= dataPemilik[i].nama_pemilik %></option>
        <% } %>
      </select>
    </div>
    <div class="form-group">
      <label for="id_dpi">DPI</label>
      <select class="form-control" id="id_dpi" name="id_dpi" required>
        <option value="">Pilih DPI</option>
        <% for (let i = 0; i < dataDpi.length; i++) { %>
        <option value="<%= dataDpi[i].id_dpi %>"><%= dataDpi[i].nama_dpi %></option>
        <% } %>
      </select>
    </div>
    <div class="form-group">
      <label for="id_alat_tangkap">Alat Tangkap</label>
      <select class="form-control" id="id_alat_tangkap" name="id_alat_tangkap" required>
        <option value="">Pilih Alat Tangkap</option>
        <% for (let i = 0; i < dataAlatTangkap.length; i++) { %>
        <option value="<%= dataAlatTangkap[i].id_alat_tangkap %>"><%= dataAlatTangkap[i].nama_alat_tangkap %></option>
        <% } %>
      </select>
    </div>
    <button type="submit" class="btn btn-success">Simpan</button>
  </form>
</div>

<%- include("../partials/foot.ejs") %>

<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
